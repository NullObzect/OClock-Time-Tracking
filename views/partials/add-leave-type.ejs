<div id="myModal" class="modal-container">
  <div class="modal">
    <div class="modal-head">
      <div class="modal-title">Add leave type</div>
      <div class="modal-close">
        <%- include("../partials/icons/close-svg"); -%>
      </div>
    </div>
    <div class="modal-content">
      <div class="container">
        <form action="/options/add-leave-type" method="POST">
          <label for="name"
            > Name
            <div class="">
              <input id="name" name="name" type="text" />
              <p class="error name-error"></p>
            </div>
          </label>
          <label for="duration">
            Duration
            <div class="">
              <input
                name="duration"
                id="durations"
                type="text"
              ></input>
            </div>
            <p class="error duration-error"></p>
          </label>
          <div class="">
            <button class="submit-btn" type="submit">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
