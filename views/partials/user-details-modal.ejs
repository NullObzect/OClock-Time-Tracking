<style>
  .user-modal-container {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    padding: 30px;
    overflow: auto;
    background-color: rgb(0, 0, 0);
    background-color: rgba(0, 0, 0, 0.4);
  }
  .user-modal {
    text-align: center;
    width: 800px;
    height: auto;
    border-radius: 20px;
    padding: 20px;
    margin: auto;
    box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25), 0 10px 10px rgba(0, 0, 0, 0.22);
    background: var(--white);
  }
  .user-modal-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 10px;
  }
  .user-modal-title {
    font-size: 20px;
    font-weight: 700;
    color: var(--deep);
  }
  .user-modal-close svg {
    stroke: var(--deep-gray);
    cursor: pointer;
  }
  .user-modal-close svg:hover {
    stroke: var(--deep2);
    cursor: pointer;
  }
  .user-modalClose svg {
    stroke: var(--deep-gray);
    cursor: pointer;
  }
  .modalClose svg:hover {
    stroke: var(--deep2);
    cursor: pointer;
  }
  /* .user-container {
    text-align: center;
    align-items: center;
  } */

  .img img {
    width: 40px;
    height: 40px;
    border: 1px solid #c8c8c8;
    border-radius: 50%;
    margin: 10px;
  }

  .user-details {
    display: flex;
    align-items: center;
  }
  .user-info {
    text-align: left;
    font-size: 14px;
  }
  .user-details-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .report-btn a {
    text-decoration: none;
    color: var(--white);
    padding: 5px 8px;
    font-size: 14px;
    background-color: var(--deep);
    border-radius: 5px;
  }
  .report-btn:hover {
    opacity: 0.8;
  }
  .user-today-info {
    padding: 14px 10px;
  }
  .user-today-info tr td {
    line-height: 18px;
    font-size: 12px;
    font-weight: 600;
    color: #3d4e5e;
  }
  .user-today-info tr td:nth-child(1) {
    padding-right: 10px;
  }
  .user-work-details .working-user {
    height: 320px;
    overflow: auto;
  }
  .user-work-details .card-header {
    font-size: 12px;
  }

  @media only screen and (max-width: 1200px) {
  }
  @media only screen and (max-width: 992px) {
    .modal-user-container {
      padding-top: 80px;
      padding-bottom: 30px;
    }
  }
  @media only screen and (max-width: 768px) {
  }
  @media only screen and (max-width: 556px) {
  }
  @media only screen and (max-width: 480px) {
    .profile-avatar img {
      width: 120px;
      height: 120px;
    }
    .modal {
      width: 90%;
    }

    /* reports page */
  }
  @media only screen and (max-width: 320px) {
    .profile-avatar img {
      width: 90px;
      height: 90px;
    }
  }
</style>
<div id="userDetails" class="user-modal-container">
  <div class="user-modal">
    <div class="user-modal-head">
      <div class="user-modal-title">Employee today report</div>
      <div class="user-modal-close">
        <%- include("../partials/icons/close-svg"); -%>
      </div>
    </div>
    <div class="user-modal-content">
      <div class="user-user-container"></div>
    </div>
  </div>
</div>
